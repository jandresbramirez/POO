import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        SurtidorDeGasolina surtidor = new SurtidorDeGasolina("Estación XYZ", "900123456-7", "Ciudad ABC");

        System.out.println("Ingrese placa del vehículo:");
        String placa = sc.nextLine();
        System.out.println("Ingrese capacidad máxima del tanque (galones):");
        int capacidadMaxima = sc.nextInt();
        System.out.println("Ingrese galones actuales en el tanque:");
        int galonesActuales = sc.nextInt();

        Vehiculo vehiculo = new Vehiculo(placa, capacidadMaxima, galonesActuales);

        System.out.println("¿Desea llenar el tanque completo? (true/false):");
        boolean llenoTotal = sc.nextBoolean();
        double dinero = 0;

        if (!llenoTotal) {
            System.out.println("Ingrese cantidad de dinero:");
            dinero = sc.nextDouble();
        }

        sc.nextLine(); // Consumir salto de línea
        System.out.println("Ingrese forma de pago (Efectivo/Tarjeta):");
        String formaDePago = sc.nextLine();

        surtidor.cargarGasolina(vehiculo, dinero, llenoTotal, formaDePago);
        surtidor.mostrarEstadisticas();

        sc.close();
    }
}
