import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;

public class Factura {
    private String nombreEstacion;
    private String nit;
    private String ciudad;
    private String placaVehiculo;
    private int galonesIngresados;
    private String formaDePago;
    private double valorPagado;
    private String fecha;

    public Factura(String nombreEstacion, String nit, String ciudad, String placaVehiculo, int galonesIngresados, String formaDePago, double valorPagado) {
        this.nombreEstacion = nombreEstacion;
        this.nit = nit;
        this.ciudad = ciudad;
        this.placaVehiculo = placaVehiculo;
        this.galonesIngresados = galonesIngresados;
        this.formaDePago = formaDePago;
        this.valorPagado = valorPagado;
        this.fecha = LocalDateTime.now().format(DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss"));
    }

    public void imprimir() {
        System.out.println("\n--- Factura ---");
        System.out.println("Estación: " + nombreEstacion + " (NIT: " + nit + ")");
        System.out.println("Ciudad: " + ciudad);
        System.out.println("Fecha: " + fecha);
        System.out.println("Placa vehículo: " + placaVehiculo);
        System.out.println("Galones ingresados: " + galonesIngresados);
        System.out.println("Forma de pago: " + formaDePago);
        System.out.println("Valor pagado: $" + valorPagado);
    }
}
